= table_tag
  thead
    tr
      th = resource_class.human_attribute_name(:id)
      th = resource_class.human_attribute_name(:name)
      th = resource_class.human_attribute_name(:internal_name)
      th = resource_class.human_attribute_name(:status)
      th = t('shared.actions')
  tbody
    - collection.each do |device|
      tr
        td = link_to device.id, edit_resource_path(device)
        td = device.name
        td = device.internal_name
        td = device_status_badge device
        td.inline-btn-toolbar
          = edit_button device
          = delete_button device, data: { confirm: t('confirmations.deletion') }
