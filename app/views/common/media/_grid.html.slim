= table_tag
  thead
    tr
      th = resource_class.human_attribute_name(:id)
      th = resource_class.human_attribute_name(:name)
      th = t('shared.actions')
  tbody
    - collection.each do |media|
      tr
        td = link_to media.id, edit_resource_path(media)
        td = media.name
        td.inline-btn-toolbar
          = edit_button media
          = delete_button media, data: { confirm: t('confirmations.deletion') }
